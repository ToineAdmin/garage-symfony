{% extends 'base.html.twig' %}

{% block title %}Demande de renseignements - Garage V. PARROT{% endblock %}

{% block content %}
<div class="row form-row mt-5 mb-5 d-flex justify-content-center">
			<div class="col-lg-4 col-md-6">
				<div class="glass-card text-center">
					<h5>Demande de renseignements</h5>
					{{ form_start(form) }}
					<div class="row mt-5">
                        <div class="col-md-12">
                            {{ form_row(form.sujet) }}
                        </div>
						<div class="col-md-6">
							{{ form_row(form.prenom) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.nom) }}
						</div>
					</div>
					{{ form_widget(form) }}
					{{ form_end(form) }}
					{% for message in app.flashes ('notice') %}
						<div class="alert alert-info">{{ message }}</div>
					{% endfor %}
				</div>
			</div>
		</div>
{% endblock %}
