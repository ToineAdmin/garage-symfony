{% extends 'base.html.twig' %}

{% block title %}Contact - GARAGE V.PARROT
{% endblock %}

{% block content %}
	<div class="container-fluid custom-container">
		<div class="row .contact-row">
			<!-- Première colonne -->
			<div class="col-md-4 d-flex justify-content-center">
				<ul class="features-list text-center">
					<li>
						<h5>NOUS CONTACTER</h5>
						<div class="d-flex justify-content-center mt-4">
							<img src="{{asset('build/images/telephone.png')}}" class="img-fluid">
						</div>
						<p class="mt-2">
							Mobile:
							<strong>06 12 78 55 **</strong><br>
							Assistance:
							<strong>03 74 52 86 **</strong><br>
						</p>
					</li>
				</ul>
			</div>
			<!-- Deuxième colonne -->
			<div class="col-md-4 d-flex justify-content-center">
				<ul class="features-list text-center">
					<li>
						<h5>GARAGE V.PARROT</h5>
						<div class="d-flex justify-content-center mt-4">
							<img src="{{asset('build/images/plans.png')}}" class="img-fluid ">
						</div>
						<p class="mt-2">
							<strong>
								Rue Jean Moulin<br>
								31000 Toulouse<br>
							</strong>
						</p>
					</li>
				</ul>
			</div>
			<!-- Troisième colonne -->
			<div class="col-md-4 d-flex justify-content-center">
				<ul class="features-list text-center">
					<li>
						<h5>ASSISTANCE DÉPANNAGE</h5>
						<div class="d-flex justify-content-center mt-4">
							<img src="{{asset('build/images/tow-truck.png')}}" class="img-fluid ">
						</div>
						<p class="mt-2">Du lundi au Vendredi
							<br>au
							<strong>03 74 52 86 **</strong>
						</p>
					</li>
				</ul>
			</div>
		</div>
		<div class="row d-flex justify-content-center mt-5 mb-5">
			<div class="col-md-4">
				<div class="glass-card">
					<h5 class="text-center">Écrivez nous !</h5>
					{{ form_start(form) }}
					<div class="row mt-5">
						<div class="col-md-6">
							{{ form_row(form.prenom) }}
						</div>
						<div class="col-md-6">
							{{ form_row(form.nom) }}
						</div>
					</div>
					{{ form_widget(form) }}
					{{ form_end(form) }}
					{% for message in app.flashes ('notice') %}
						<div class="alert alert-info">{{ message }}</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

</div>{% endblock %}
